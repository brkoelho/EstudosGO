package main

import (
	"fmt"
)

// Soma de Positivos e Negativos
func main() {
	// Lista de Número que declarei
	ListaNumeros := []int{-1, -2, -3, -4, 1, 2, 3, 4, 5}
	// Variáveis que declarei para usar como as Somas
	var SomaPositivos int
	var SomaNegativos int
	// Fazendo a soma dos positivos
	for _, Positivos := range ListaNumeros {
		if Positivos >= 0 {
			SomaPositivos = SomaPositivos + Positivos
		}
	}
	// Fazendo a soma dos negativos
	for _, Negativos := range ListaNumeros {
		if Negativos < 0 {
			SomaNegativos = SomaNegativos + Negativos
		}
	}
	// Print dos valores... Só funciona pq foram declaradas fora do For
	fmt.Println("[", SomaPositivos, ";", SomaNegativos, "]")
}
